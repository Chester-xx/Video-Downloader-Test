<Window x:Name="frmMain" x:Class="Program.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Program"
        mc:Ignorable="d"
        Title="Video Downloader" Height="800" Width="1400" WindowStartupLocation="CenterScreen" Foreground="{x:Null}" Background="{x:Null}" Icon="/icon.jpg" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="grdMain" Background="#FF191919" HorizontalAlignment="Center" VerticalAlignment="Center" Height="800" Width="1400" OpacityMask="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnDownload" Click="btnDownload_Click" Margin="75,689,141,49" Content="Download Video" Background="#FF464646" BorderBrush="#FF197DCC" Grid.Column="2" Foreground="#FF197DCC" FontWeight="Bold" FontSize="24"/>
        <Button x:Name="btnDirectory" Content="Folder" Grid.Column="2" Margin="729,689,75,49" Background="#FF464646" Foreground="#FF197DCC" Click="btnDirectory_Click" BorderBrush="#FF197DCC"/>
        <TextBox x:Name="txtURL" TextWrapping="Wrap" Grid.Column="2" Margin="75,85,75,690" Background="#FF464646" FontSize="16" Foreground="#FF197DCC" TextAlignment="Center" SelectionBrush="#FF197DCC" TextChanged="txtURL_TextChanged"/>
        <Border x:Name="bdrView" BorderBrush="#FF197DCC" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top" Height="745" Width="498" Grid.Column="1" CornerRadius="10,10,10,10" Margin="0,22,0,0">
            <Image x:Name="imgThumbNail" Grid.ColumnSpan="2" Source="/test-image-thumbnail.jpg" Grid.IsSharedSizeScope="True" Stretch="UniformToFill" Width="400" Height="225" Margin="48,48,48,463"/>
        </Border>
        <Label x:Name="lblDownloadInfo" Content="Download Information" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" Margin="159,516,159,253" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="lblOutput" Grid.Column="1" Content="" HorizontalAlignment="Center" Margin="0,610,0,0" VerticalAlignment="Top" Foreground="White" Width="445" Height="141"/>
        <ProgressBar x:Name="prgbarDownload" Grid.ColumnSpan="3" Height="10" Margin="0,772,0,18" Background="#FF464646" BorderBrush="#FF070404" Foreground="#FF0078D7"/>
        <Label x:Name="lblSpeed" Content="0.00 MiB/s       00:00" Grid.ColumnSpan="2" Margin="45,581,45,195" Background="{x:Null}" Foreground="White"/>
        <Label x:Name="lblDirectory" Content="" Grid.ColumnSpan="2" Margin="45,547,46,224" Foreground="White"/>
        <Label x:Name="lblTitle" Content="Label" Grid.ColumnSpan="2" Margin="68,321,69,400" HorizontalContentAlignment="Center" Background="#FFBFBFBF" Foreground="White" FontSize="22" FontWeight="Bold" />
        <Label x:Name="lblViewCount" Content="Views : " Grid.ColumnSpan="2" Margin="69,405,69,365" Background="{x:Null}" Foreground="White"/>
        <Label x:Name="lblAuthor" Content="Author : " Margin="68,435,69,334" Grid.Column="1" Foreground="White" Height="31"/>
        <Label x:Name="lblFileSize" Content="File Size : " Grid.Column="1" Margin="69,466,69,304" Foreground="White"/>
    </Grid>
</Window>
